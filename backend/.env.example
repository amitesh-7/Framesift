# FrameSift Backend Environment Variables

PINECONE_API_KEY=your_actual_api_key_here
PINECONE_INDEX_NAME=framesift

# NVIDIA NIM API Keys (JSON array for multi-key rotation)
# Get keys from: https://build.nvidia.com/
NVIDIA_KEYS=["nvapi-your-key-1", "nvapi-your-key-2"]

# Admin Portal Secret Key
# Use a strong random key in production
ADMIN_KEY=admin-secret-key

# ============================================
# MongoDB Configuration
# ============================================
# MongoDB connection string
MONGODB_URI=mongodb://localhost:27017
# Database name for FrameSift
MONGODB_DB_NAME=framesift
# Collection name for user data
MONGODB_COLLECTION_NAME=users

# ============================================
# Redis Configuration
# ============================================
# Redis host
REDIS_HOST=localhost
# Redis port
REDIS_PORT=6379
# Redis database number (0-15)
REDIS_DB=0
# Redis password (leave empty if no auth)
REDIS_PASSWORD=
